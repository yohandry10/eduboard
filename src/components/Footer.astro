<!-- Estilos en CSS (sin Tailwind) -->
<style>
  /* Fondo negro y espaciados generales */
  .footer-dark {
    background-color: #000;
    color: #fff;
    padding: 3rem 1rem;
  }

  /* Contenedor principal, 3 columnas en pantallas medianas en adelante */
  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }
  @media (min-width: 768px) {
    .footer-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* Columnas */
  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  /* Título de columna */
  .footer-title {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  /* Texto */
  .footer-text {
    color: #ccc; 
    line-height: 1.5;
    margin: 0;
  }

  /* Listas de enlaces */
  .footer-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  /* Enlaces principales en texto */
  .footer-link {
    color: #aaa; /* Gris claro */
    text-decoration: none;
    transition: color 0.3s ease;
  }
  .footer-link:hover {
    color: #FF6C00; /* Hover anaranjado (logo) */
  }

  /* Fila de redes sociales */
  .footer-social {
    max-width: 1200px;
    margin: 2rem auto 0; 
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  /* Cada enlace social */
  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
  }

  /* Íconos: color base + hover color + shadow anaranjado */
  .socicon {
    width: 24px;
    height: 24px;
    fill: #aaa; /* color base del ícono */
    transition: fill 0.3s ease, box-shadow 0.3s ease;
  }
  .social-link:hover .socicon {
    fill: #FF6C00; /* Anaranjado al hover */
    box-shadow: 0 0 6px #FF6C00; /* Sombra color anaranjado */
  }

  /* Sección inferior (línea divisoria, texto centrado, etc.) */
  .footer-bottom {
    border-top: 1px solid #333;
    margin-top: 2rem;
    padding-top: 1rem;
    text-align: center;
  }
  .footer-copy {
    color: #888;
    margin: 0;
  }
</style>
