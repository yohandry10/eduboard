  <script client:load>
    // Se utiliza client:load para ejecutar el script en el cliente
    function initHero() {
      console.log("initHero se ha inicializado");
      
      /* ==============================
         Funcionalidad del Video & Lightbox
         ============================== */
      const videoButton = document.getElementById('open-video');
      const videoLightbox = document.getElementById('video-lightbox');
      const closeButton = document.getElementById('close-video');
      const lightboxVideo = document.getElementById('lightbox-video');

      if (videoButton && videoLightbox && closeButton && lightboxVideo) {
        videoButton.addEventListener('click', (event) => {
          event.preventDefault();
          console.log("Se hizo clic en el contenedor del video");
          videoLightbox.classList.add('show');
          lightboxVideo.currentTime = 0; // Reinicia el video
          lightboxVideo.play();
          // Solicitar pantalla completa en el contenedor del lightbox
          if (videoLightbox.requestFullscreen) {
            videoLightbox.requestFullscreen();
          } else if (videoLightbox.webkitRequestFullscreen) {
            videoLightbox.webkitRequestFullscreen();
          } else if (videoLightbox.msRequestFullscreen) {
            videoLightbox.msRequestFullscreen();
          }
        });
      
        closeButton.addEventListener('click', () => {
          console.log("Se hizo clic en el botón de cerrar");
          videoLightbox.classList.remove('show');
          lightboxVideo.pause();
          if (document.fullscreenElement) {
            document.exitFullscreen();
          } else if (document.webkitFullscreenElement) {
            document.webkitExitFullscreen();
          } else if (document.msFullscreenElement) {
            document.msExitFullscreen();
          }
        });
      
        videoLightbox.addEventListener('click', (event) => {
          if (event.target === videoLightbox) {
            console.log("Se hizo clic fuera del contenedor de video");
            videoLightbox.classList.remove('show');
            lightboxVideo.pause();
            if (document.fullscreenElement) {
              document.exitFullscreen();
            } else if (document.webkitFullscreenElement) {
              document.webkitExitFullscreen();
            } else if (document.msFullscreenElement) {
              document.msExitFullscreen();
            }
          }
        });
      } else {
        console.error("No se encontraron uno o más elementos necesarios para el video.");
      }
      
      /* ==============================
         Funcionalidad del Slider de Imágenes
         ============================== */
      const sliderImages = document.querySelectorAll('.hero__image');
      const nextButton = document.querySelector('.hero__nav-button--next');
      const prevButton = document.querySelector('.hero__nav-button--prev');
      const dots = document.querySelectorAll('.hero__dot');
      let currentSlide = 0;
      
      function showSlide(index) {
        sliderImages.forEach((img, i) => {
          img.classList.toggle('active', i === index);
        });
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === index);
        });
        currentSlide = index;
      }
      
      function nextSlide() {
        let next = currentSlide + 1;
        if (next >= sliderImages.length) {
          next = 0;
        }
        showSlide(next);
      }
      
      function prevSlide() {
        let prev = currentSlide - 1;
        if (prev < 0) {
          prev = sliderImages.length - 1;
        }
        showSlide(prev);
      }
      
      if (nextButton) {
        nextButton.addEventListener('click', nextSlide);
      }
      if (prevButton) {
        prevButton.addEventListener('click', prevSlide);
      }
      
      dots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          showSlide(index);
        });
      });
      
      // Cambio automático de slide cada 5 segundos
      setInterval(nextSlide, 5000);
    }

    // Inicializar el hero cuando el DOM esté completamente cargado
    document.addEventListener('DOMContentLoaded', initHero);
  </script>
