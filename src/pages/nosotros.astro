---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Nosotros - Empresa Peruana Fabricante">
  <!-- Sección de Presentación -->
  <section class="hero">
    <div class="hero-content">
      <h1>Empresa Peruana Fabricante</h1>
      <p>
        Llevando tecnología a los colegios de nuestro país al menor costo,
        apostando por la pizarra digital interactiva <strong>EduBoard</strong>
        y materiales educativos de alta calidad.
      </p>
    </div>
  </section>

  <!-- Sección Nosotros -->
  <section class="about-section">
    <div class="about-container">
      <h2>¿Quiénes Somos?</h2>
      <p>
        Somos una empresa peruana con la meta de 
        <strong>llevar tecnología a nuestros colegios al menor costo</strong>. 
        Creemos en la transformación de la educación a través de herramientas 
        digitales como <em>EduBoard</em>, la pizarra digital interactiva más fuerte, 
        precisa y duradera del mercado.
      </p>
      <p>
        Nuestro enfoque es brindar la mejor calidad y servicio, 
        dedicándonos a ofrecer materiales educativos que impulsen 
        el desarrollo tecnológico de las instituciones educativas 
        desde primaria hasta la universidad.
      </p>
      <ul>
        <li>Innovación en educación</li>
        <li>Productos de alta durabilidad</li>
        <li>Compromiso con la calidad</li>
        <li>Soporte y asesoría técnica constante</li>
      </ul>
    </div>
  </section>

  <!-- Sección de Contacto -->
  <section class="contact-section">
    <div class="contact-container">
      <h2>Contacto</h2>
      <p>
        ¿Tienes alguna duda, requieres asesoría o una cotización? 
        ¡Completa el formulario y te responderemos a la brevedad!
      </p>
      <form class="contact-form" id="contact-form">
        <label for="name">Nombre</label>
        <input type="text" id="name" name="name" placeholder="Tu nombre completo" required />

        <label for="email">Correo Electrónico</label>
        <input type="email" id="email" name="email" placeholder="Tu correo electrónico" required />

        <label for="numero">Número</label>
        <input type="text" id="numero" name="numero" placeholder="Tu número de teléfono" required />

        <label for="message">Mensaje</label>
        <textarea id="message" name="message" placeholder="Escribe aquí tu consulta" required></textarea>

        <button type="submit" class="btn-submit">Enviar Mensaje</button>
      </form>
    </div>
  </section>

  <!-- Contenedor para el toast -->
  <div id="toast" class="toast"></div>
</Layout>

<style>
  /* ---------- Variables de color y tipografía ---------- */
  :root {
    --primary-color: #F05A28;
    --secondary-color: #111111;
    --text-color: #333333;
    --bg-color: #f5f5f5;
    --font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  section {
    padding: 2rem 1rem;
  }
  
  /* ---------- Hero / Presentación ---------- */
  .hero {
    background: linear-gradient(120deg, var(--primary-color), var(--secondary-color));
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 250px;
    text-align: center;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .hero-content p {
    font-size: 1.2rem;
  }
  
  /* ---------- Sección Nosotros ---------- */
  .about-section {
    background-color: var(--bg-color);
  }
  
  .about-container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: left;
  }
  
  .about-container h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }
  
  .about-container p {
    line-height: 1.6;
    margin-bottom: 1rem;
  }
  
  .about-container ul {
    margin-left: 1.5rem;
    list-style-type: disc;
    margin-top: 1rem;
  }
  
  /* ---------- Sección Contacto ---------- */
  .contact-section {
    background-color: #fff;
  }
  
  .contact-container {
    max-width: 700px;
    margin: 0 auto;
    text-align: left;
  }
  
  .contact-container h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--primary-color);
  }
  
  .contact-container p {
    margin-bottom: 2rem;
  }
  
  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .contact-form label {
    font-weight: 600;
  }
  
  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-family: var(--font-family);
    font-size: 1rem;
  }
  
  .contact-form textarea {
    min-height: 120px;
    resize: vertical;
  }
  
  .btn-submit {
    background-color: var(--primary-color);
    color: #fff;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    align-self: flex-start;
    transition: background-color 0.3s ease;
  }
  
  .btn-submit:hover {
    background-color: #c44d1f;
  }
  
  @media (max-width: 768px) {
    .hero-content h1 {
      font-size: 2rem;
    }
    .about-container, .contact-container {
      padding: 0 1rem;
    }
  }
  
  /* Estilos para el toast */
  .toast {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: rgba(0, 0, 0, 0.8);
    color: #fff;
    padding: 16px;
    border-radius: 4px;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
    z-index: 9999;
    pointer-events: none;
  }
  
  .toast.show {
    opacity: 1;
  }
</style>

<!-- Bloque de script que se ejecuta en el cliente -->
<script client:load>
  // Función genérica para cargar un script desde un CDN
  function loadScript(src, callback) {
    const script = document.createElement('script');
    script.src = src;
    script.onload = callback;
    document.head.appendChild(script);
  }
  
  // Función para cargar EmailJS desde el CDN si aún no está presente
  function loadEmailJs(callback) {
    if (!window.emailjs) {
      loadScript("https://cdn.emailjs.com/dist/email.min.js", callback);
    } else {
      callback();
    }
  }
  
  // Función para cargar canvas-confetti desde el CDN si aún no está presente
  function loadConfetti(callback) {
    if (!window.confetti) {
      loadScript("https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js", callback);
    } else {
      callback();
    }
  }
  
  // Función para mostrar un toast moderno
  function showToast(message, duration = 3000) {
    const toast = document.getElementById('toast');
    if (!toast) return;
    toast.textContent = message;
    toast.classList.add('show');
    setTimeout(() => {
      toast.classList.remove('show');
    }, duration);
  }
  
  // Cargamos EmailJS y configuramos el envío del formulario
  loadEmailJs(() => {
    window.emailjs.init("WFZ0gBKA4dv1GiJIb");
  
    const form = document.getElementById('contact-form');
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        window.emailjs.sendForm('service_hctq6er', 'template_9h6wpt7', form)
          .then((result) => {
            console.log('Email enviado!', result.text);
            showToast('Mensaje enviado correctamente.');
            // Cargamos y ejecutamos confetti
            loadConfetti(() => {
              window.confetti({
                particleCount: 150,
                spread: 70,
                origin: { y: 0.6 }
              });
            });
            form.reset();
          })
          .catch((error) => {
            console.error('Fallo al enviar el email:', error.text);
            showToast('Error al enviar el mensaje. Inténtalo de nuevo.');
          });
      });
    } else {
      console.error('No se encontró el formulario con ID "contact-form".');
    }
  });
</script>
