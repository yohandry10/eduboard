  <!-- Script para actualizar el precio y ajustar la línea vertical -->
  <script>
    // Actualiza el precio al hacer clic en cada elemento
    const priceEl = document.getElementById('precio');
    const liElements = document.querySelectorAll('#sizesList li');
    liElements.forEach(li => {
      li.addEventListener('click', () => {
        liElements.forEach(item => item.classList.remove('active'));
        li.classList.add('active');
        const newPrice = li.getAttribute('data-price');
        priceEl.textContent = `S./${newPrice}`;
      });
    });

    // Ajusta la línea vertical para que vaya desde el centro del primer círculo al centro del último
    window.addEventListener("load", () => {
      const sizesList = document.getElementById("sizesList");
      const verticalLine = document.getElementById("verticalLine");
      const firstLi = sizesList.querySelector("li:first-child");
      const lastLi = sizesList.querySelector("li:last-child");
      const firstCircle = firstLi.querySelector(".circle-container");
      const lastCircle = lastLi.querySelector(".circle-container");
      
      // Coordenada centro del primer círculo
      const firstCenter = firstLi.offsetTop + (firstCircle.offsetHeight / 2);
      // Coordenada centro del último círculo
      const lastCenter = lastLi.offsetTop + (lastCircle.offsetHeight / 2);
      
      // Aplica los valores a la línea
      verticalLine.style.top = firstCenter + "px";
      verticalLine.style.height = (lastCenter - firstCenter) + "px";
    });
  </script>

  <!-- Estilos CSS -->
  <style>
    :root {
      --primary-color: #F05A28; /* naranja vibrante */
      --secondary-color: #111111; /* prácticamente negro */
    }

    /* Reset básico */
    body {
      margin: 0;
      padding: 0;
      background: #f5f5f5;
      color: #333;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    /* Fondo degradado: se aplica solo padding horizontal para que el degradado se vea únicamente en los laterales */
    .page-gradient {
      width: 100%;
      /* Eliminamos el padding vertical para que el contenedor blanco toque el navbar y el footer */
      padding: 0 2rem;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    /* Contenedor central */
    .main-content {
      max-width: 1200px;
      margin: 0 auto;
      background: #fff;
      border-radius: 8px;
      padding: 2rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    /* Título y descripción */
    .title-section {
      text-align: center;
      margin-bottom: 2rem;
    }
    .title {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }
    .subtitle {
      font-size: 1.2rem;
      color: #555;
    }

    /* Producto */
    .product-section {
      margin-bottom: 3rem;
    }
    .product-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    /* Columna Izquierda */
    .left-column .image-container {
      margin-bottom: 1rem;
    }
    .left-column .image-container img {
      width: 100%;
      border-radius: 8px;
    }
    .price-box {
      background: #000;
      color: #fff;
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
    }
    .price {
      font-size: 1.8rem;
      font-weight: bold;
      margin: 0 0 0.5rem;
    }
    .price-note {
      font-size: 0.9rem;
      margin: 0;
    }
    .description {
      color: #555;
      line-height: 1.5;
    }

    /* Columna Derecha */
    .right-column-title {
      font-size: 1.2rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    /* Contenedor para la línea vertical y la lista */
    .vertical-line-container {
      position: relative;
    }
    .vertical-line {
      position: absolute;
      left: 25px;
      background: #ccc;
      width: 2px;
      z-index: 1;
    }

    /* Lista de medidas */
    .sizes-list {
      list-style: none;
      margin: 0;
      padding: 0;
      position: relative;
    }
    .sizes-list li {
      display: flex;
      align-items: center;
      margin: -20px 0;
      position: relative;
      z-index: 2;
    }
    .sizes-list li:first-child {
      margin-top: 0;
    }
    .sizes-list li:last-child {
      margin-bottom: 0;
    }
    .circle-container {
      width: 50px;
      height: 50px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .circle-dot {
      width: 18px;
      height: 18px;
      background: #eee;
      border: 2px solid #ccc;
      border-radius: 50%;
    }
    .sizes-list li span {
      margin-left: 10px;
      font-size: 1rem;
    }
    .sizes-list li.active {
      color: #fc5e65;
      font-weight: bold;
    }
    .sizes-list li.active .circle-dot {
      background: #fc5e65;
      border-color: #fc5e65;
    }
  </style>
</Layout>
