---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Pedestales">

  <!-- Fondo degradado a los bordes (consistente con el resto de la web) -->
  <div class="page-gradient">

    <!-- Contenido centrado en recuadro blanco (sin bordes ni sombra) -->
    <div class="main-content">

      <!-- Hero Section -->
      <div class="hero-section">
        <h1 class="hero-title">Pedestales para Pizarras Interactivas</h1>
        <p class="hero-subtitle">
          Soluciones de montaje versátiles y seguras para sus equipos interactivos
        </p>
      </div>

      <!-- Grid con 2 pedestales en la misma fila -->
      <div class="two-cols">
        
        <!-- Pedestal Móvil Simple -->
        <div class="product-card">
          <img
            src="/pedestal1.webp"
            alt="Pedestal Móvil Simple"
            class="product-image"
          />
          <div class="product-card-content">
            <h2 class="product-title">Pedestal Móvil Simple</h2>
            <ul class="product-list">
              <li>• Ruedas resistentes y reforzadas con freno de seguridad</li>
              <li>• Rotación del brazo del soporte del proyector</li>
              <li>• Fácil traslado entre ambientes</li>
              <li>• Alta estabilidad y seguridad</li>
            </ul>
          </div>
        </div>

        <!-- Pedestal Eléctrico Móvil -->
        <div class="product-card">
          <img
            src="/pedestal2.webp"
            alt="Pedestal Eléctrico Móvil"
            class="product-image"
          />
          <div class="product-card-content">
            <h2 class="product-title">Pedestal Eléctrico Móvil</h2>
            <ul class="product-list">
              <li>• Sistema de elevación con pulsador y control remoto</li>
              <li>• Altura ajustable para niños y adultos</li>
              <li>• Rotación del brazo del soporte</li>
              <li>• Sistema de freno de seguridad</li>
            </ul>
          </div>
        </div>

      </div> 
      <!-- Fin .two-cols -->

      <!-- Elevador Eléctrico Fijo a Pared (ocupa todo el ancho) -->
      <div class="product-card">
        <img
          src="/pedestal3.webp"
          alt="Elevador Eléctrico Fijo a Pared"
          class="product-image"
        />
        <div class="product-card-content">
          <h2 class="product-title">Elevador Eléctrico Fijo a Pared</h2>
          <ul class="product-list">
            <li>• Sistema de elevación con pulsador y control remoto</li>
            <li>• Regulación en altura para máxima flexibilidad</li>
            <li>• Instalación fija a pared</li>
            <li>• Ideal para aulas y salas de conferencias</li>
          </ul>
        </div>
      </div>

    </div> 
    <!-- Fin .main-content -->

  </div>
  <!-- Fin .page-gradient -->

  <!-- Estilos en CSS puro -->
  <style>
    /* Reset / base */
    body {
      margin: 0;
      padding: 0;
      background: #f5f5f5; 
      color: #333;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    /* 1) Contenedor con degradado en los bordes (actualizado para consistencia) */
    .page-gradient {
      width: 100%;
      min-height: 100vh;
      background: linear-gradient(135deg, #C02425, #F0CB35);
      padding: 2rem 0; /* Espacio arriba/abajo */
    }

    /* 2) Contenedor central con fondo blanco (sin borde ni sombra) */
    .main-content {
      max-width: 1200px;
      margin: 0 auto;
      background: #fff;
      /* Se mantienen sin bordes redondeados ni sombra */
      padding: 2rem;
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      margin-bottom: 4rem;
    }
    .hero-title {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    .hero-subtitle {
      font-size: 1.2rem;
      color: #666;
    }

    /* Disposición en 2 columnas a partir de pantallas medianas */
    .two-cols {
      display: grid;
      gap: 2rem;
      margin-bottom: 4rem; 
    }
    @media (min-width: 768px) {
      .two-cols {
        grid-template-columns: 1fr 1fr;
      }
    }

    /* Tarjeta de producto */
    .product-card {
      background: #fff;
      /* Sin bordes redondeados ni sombra, tal como se indicó */
      padding: 2rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-bottom: 2rem;
    }
    @media (min-width: 768px) {
      .product-card {
        flex-direction: row;
        align-items: flex-start;
      }
    }

    /* Imagen del producto */
    .product-image {
      width: 12rem;  /* Tamaño similar a w-48 en Tailwind */
      height: auto;
      /* Sin borde redondeado */
      margin-bottom: 1.5rem; 
    }
    @media (min-width: 768px) {
      .product-image {
        margin-right: 1.5rem;
        margin-bottom: 0;
      }
    }

    /* Contenido textual de la tarjeta */
    .product-card-content {
      flex: 1;
    }
    .product-title {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 1rem;
    }
    .product-list {
      list-style: none;
      padding: 0;
      margin: 0;
      color: #666;
    }
    .product-list li {
      margin-bottom: 0.75rem;
    }
  </style>

</Layout>
