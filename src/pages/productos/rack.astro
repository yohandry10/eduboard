---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Rack Empotrado">

  <!-- Fondo degradado en los bordes: solo padding horizontal -->
  <div class="page-gradient">
    <!-- Contenido centrado con fondo blanco -->
    <div class="main-content">
      <!-- Hero Section -->
      <div class="hero-section">
        <h1 class="hero-title">Rack Eléctrico para Proyector</h1>
        <p class="hero-subtitle">Solución profesional que se oculta en el cielo raso</p>
      </div>

      <!-- Imágenes SIN bordes o "cart" -->
      <div class="image-row">
        <img 
          src="https://montech.pe/cdn/shop/files/PRELEC_600x.png?v=1735786598" 
          alt="Rack Eléctrico 1"
          class="raw-image"
        />
        <img 
          src="https://montech.pe/cdn/shop/products/Racksoporteparaproyectordeparedytecho-RackMontechsurcolimaperu_6.jpg?v=1601781339" 
          alt="Rack Eléctrico 2"
          class="raw-image"
        />
      </div>

      <!-- Características -->
      <div class="features-section">
        <h2 class="section-title">Características</h2>
        <div class="features-grid">
          {[
            'Fabricado en aluminio',
            'Control remoto y pulsador incluido',
            'Marca EDUBOARD',
            'Funcionamiento silencioso',
            'Presentación profesional',
            'Fabricación a medida',
            'Motor tubular de 10NT',
            'Capacidad de carga 20 kg',
            'Garantía de 1 año',
          ].map((feature) => (
            <div class="feature-item">
              <span class="checkmark">✓</span>
              <span class="feature-text">{feature}</span>
            </div>
          ))}
        </div>
      </div>

    </div>
    <!-- Fin .main-content -->
  </div>
  <!-- Fin .page-gradient -->

  <!-- Estilos en CSS puro -->
  <style>
    :root {
      --primary-color: #F05A28; /* naranja vibrante */
      --secondary-color: #111111; /* prácticamente negro */
    }

    /* 1) Ajustes base */
    body {
      margin: 0;
      padding: 0;
      background: #f5f5f5;
      color: #333;
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    }

    /* 2) Fondo degradado en los bordes: se usa solo padding horizontal para que el degradado se vea únicamente en los laterales.
         Se eliminan tanto el padding vertical como la altura mínima para que no aparezca degradado debajo del contenedor blanco. */
    .page-gradient {
      width: 100%;
      padding: 0 2rem;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    /* 3) Contenedor central con fondo blanco */
    .main-content {
      max-width: 1200px;
      margin: 0 auto;
      background: #fff;
      border-radius: 8px;
      padding: 2rem;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    /* Hero Section */
    .hero-section {
      text-align: center;
      margin-bottom: 4rem;
    }
    .hero-title {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      font-weight: bold;
    }
    .hero-subtitle {
      font-size: 1.2rem;
      color: #666;
    }

    /* Nueva fila de imágenes SIN bordes/carts */
    .image-row {
      display: flex;
      flex-direction: column; /* Por defecto en mobile */
      gap: 2rem; 
      align-items: center;
      margin-bottom: 4rem;
    }
    @media (min-width: 768px) {
      .image-row {
        flex-direction: row;
        justify-content: center;
      }
    }
    .raw-image {
      width: auto; 
      max-width: 100%; 
      height: auto;
    }

    /* Sección de Características */
    .features-section {
      background: #fff;
      border-radius: 8px;
      margin-bottom: 4rem;
      padding: 2rem;
    }
    .section-title {
      font-size: 1.75rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
    }
    .features-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    @media (min-width: 768px) {
      .features-grid {
        grid-template-columns: 1fr 1fr;
      }
    }
    .feature-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }
    .checkmark {
      color: #fc5e65;
      font-weight: bold;
    }
    .feature-text {
      color: #555;
    }
  </style>

</Layout>
